---
layout: partials/layout.njk
title: 'My Testing Blog'
---

{% for post in contentful.posts %}
	<article>
		<img src="{{post.fields.featuredImage.fields.file.url}}" />
		<time>
			<h2><a href="{{post.fields.slug}}">{{post.fields.title}}</a></h2>
			<time class="date" datetime="{{post.fields.dateUpdate}}">{{post.fields.dateUpdate}}</time>
		</header>
		<div class="excerpt">{{post.fields.excerpt | striptags(true)}}...</div>
		<div class="share-icons">
			<a href="https://twitter.com/home?status=So%20%40amys_kapers%20wrote%20this%20really%20cool%20blog%20post,%20you%20should%20check%20it%20out!%20{{contentful.siteUrl}}/{{post.fields.slug}}" target="_blank" class="twitter share-link">
			{% include 'img/twitter.svg' %}
				<span>Share article to Twitter (opens in new tab)</span>
			</a>
		</div>
	</article>
{% endfor %}
